{
    "name": "lingoda/linters",
    "description": "Lingoda linters base code",
    "homepage": "https://www.lingoda.com",
    "support": {
        "email": "support@lingoda.com",
        "issues": "https://lingoda.atlassian.net/secure/Dashboard.jspa"
    },
    "license": "proprietary",
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "ext-ctype": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpstan/phpstan-symfony": "^1.0",
        "phpstan/phpstan-doctrine": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-webmozart-assert": "^1.0",
        "phpstan/phpstan": "^1.0",
        "nesbot/carbon": "^2.48",
        "pedrotroller/php-cs-custom-fixer": "^2.25",
        "phpstan/extension-installer": "^1.1",
        "symplify/easy-coding-standard": "^12.1.12"
    },
    "replace": {
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-mbstring": "*"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
